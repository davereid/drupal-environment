{
    "name": "davereid/drupal-environment",
    "description": "Provides a helper for working with environment variables and Drupal hosting providers.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "Drupal",
        "Acquia",
        "Pantheon",
        "Tugboat",
        "Environment"
    ],
    "authors": [
        {
            "name": "Dave Reid",
            "email": "dave@davereid.net"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "DrupalEnvironment\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DrupalEnvironment\\Tests\\": "tests/src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "scripts": {
        "lint": [
            "@phpcs",
            "@phpstan"
        ],
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "@phpunit"
        ],
        "phpcs": "vendor/bin/phpcs",
        "phpstan": "vendor/bin/phpstan",
        "phpunit": "vendor/bin/phpunit --coverage-text"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "platform": {
            "php": "8.3"
        }
    }
}
